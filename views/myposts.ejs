<% include ./partials/header%>
<% include ./partials/navbar%>

<div class="myposts">
    <h1 id= "moo">Here are all my posts:</h1>
    <ul id= "content">
        <%if (content.length > 0) { %>
        <% for(let input of content) { %>
        <div>
        <h3>Subject:
            <%=input.title%>
        </h3>
        
        <h3>Message:
            <p style="color:blue">
            <%=input.post%>
            <%=input.id%>
            </p>
        </h3>   
        <form id= "addcom" action="/myposts" method="post">
            <input type="hidden" name="postId" value="<%=input.id%>">
            <input id="inputForm" type='text' placeholder='Write a comment' name='Body'>
            <input id="sad" type="submit" value="Post comment"/>
        </form>

        <h3 id="comments">Comments:
            <p style="color:red">
                <% for(let comment of input.comments) { %>
                    <%- JSON.stringify(comment.body) %>

                <% } %>
            
            </p>
        </h3>   
        
        
    </div>


        <br><br>
     
        <% } %>
        <% } %>
     
        <%if (content.length == 0) { %>
        <p>
            Emptiness
        </p>
        <% } %>
     </ul>
<% include ./partials/footer%>
